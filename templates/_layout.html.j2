<!doctype html>

<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>WestWords</title>
  <link rel="stylesheet" href="{{ url_for('static', filename='css/style.css') }}" type="text/css" />
  <link rel="stylesheet" href="{{ url_for('static', filename='css/dist/dialog-polyfill.css') }}" type="text/css" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" type="text/css" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
  <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.grey-indigo.min.css" />
  <link rel="shortcut icon" href="{{ url_for('static', filename='favicon.ico') }}" />

  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<html lang="en">

<!-- Flash messages from Flask -->
{% with messages = get_flashed_messages() %}
{% if messages %}
<ul class=flashes>
  {% for message in messages %}
  <li>{{ message }}</li>
  {% endfor %}
</ul>
{% endif %}
{% endwith %}

<!-- Scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.5.4/socket.io.js"></script>
<script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
<script src="{{ url_for('static', filename='js/dist/dialog-polyfill.js') }}"></script>
<script src="{{ url_for('static', filename='js/easytimer.min.js') }}"></script>
<script src="{{ url_for('static', filename='js/script.js') }}"></script>
{% if game_id|length %}
<script>
  // Largely load-bearing game_state capture.
  get_game_state('{{ game_id }}')
</script>
{% endif %}


{# Snackbar display #}
<div id="demo-toast-example" class="mdl-js-snackbar mdl-snackbar">
  <div class="mdl-snackbar__text"></div>
  <button class="mdl-snackbar__action" type="button"></button>
</div>

<!-- Always shows a header, even in smaller screens. -->
<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
  <header class="mdl-layout__header">
    <div class="mdl-layout__header-row">
      <!-- Title -->
      <span class="mdl-layout-title" id="title-bar-role">Waiting...</span>
      <!-- Add spacer, to align navigation to the right -->
      <div class="mdl-layout-spacer"></div>
      <!-- Navigation. We hide it in small screens. -->
      <nav id="titlebar-username" class="username mdl-navigation">
        {{ session.username }}
      </nav>
    </div>
  </header>
  <div class="mdl-layout__drawer">
    <span class="mdl-layout-title"><a href="/">Westwords</a></span>
    <nav class="mdl-navigation">
      <p>
      <form action="/username" id="username_change" method="POST">
        {%- if game_id|length -%}
        <input hidden id="requesting_url" name="requesting_url" value="/game/{{ game_id }}" />
        {%- endif -%}
        Username: <input type="text" name="username" id="username" value="{{ session.username }}">
        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored"
          onclick="document.getElementById('username_change').submit()">Change username</button>
        </p>
        <p>
          {% if game_id|length %}
          <button type="button" onclick="location.href='/spectate/{{ game_id }}'"
            class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" id="spectate"
            hidden>Spectate</button>
        </p>
        <p>
          <button type="button" onclick="location.href='/leave/{{ game_id }}'"
            class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored"
            id="leave_game">Quit Game</button>
        </p>
        {% endif %}
        <p>
          <a href="/privacy_policy">Privacy Policy</a>
        </p>

      </form>
    </nav>
  </div>
  <main class="mdl-layout__content">
    <div class="page-content">
      <dialog class="mdl-dialog" id="modal-example">
      </dialog>
      {% block body %}{% endblock %}
    </div>
  </main>
</div>