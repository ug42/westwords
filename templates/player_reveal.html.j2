{% if footer_mode %}
{# Footer display #}
{% if known_word is not none %}Word: <u>{{ known_word }}</u> &emsp;{%- endif -%}
{% for p in known_players %}
Player: <b>{{ p.name }} {% if p.name == mayor %} (Mayor) {% endif %}</b> ({{ p.role }}) &emsp;
{%- endfor -%}

{% else %}
{# Main dialog display for role/info reveal #}
<div>
    <h5>
        Your role is {{player_role}}
    </h5>
    {% if known_word is not none %}<h5>Word: <u>{{known_word}}</u></h5><br> {% endif %}
    {% if image is not none %}<center><img src="{{ url_for('static', filename='img/' + image) }}"
            title="{{role_description}}" width="200" height="200"></center><br> {% endif %}

    {% for p in known_players %}
    <br>Player: <b>{{ p.name }} {% if p.name == mayor %} (Mayor) {% endif %}</b> role: <b>{{ p.role }}</b><br>
    {% endfor %}
    <button type="button" class="mdl-button close" onclick="ack_reveal()">OK</button>
</div>
{% endif %}