<div>
    <span>
        {% if own_question and not question_object.answer %}
        <div style="display: inline;">
            <button style="border: 0; background: none; -webkit-appearance: none;"
                onclick="delete_question('{{ game_id }}', {{ question_object.id }})">
                <span class="material-icons" title="Delete question">close</span>
            </button>
        </div>
        {% endif %}

        {% if player_is_mayor and not question_object.answer -%}
        <div style="display: inline">
            {% for token in tokens %}
            <button onclick="answer('{{ game_id }}', {{ question_object.id }}, '{{ token.value }}')"
                class="material-icons" title="{{ token.token_text }}">
                {{ token.token_icon }}
            </button>
            {% endfor %}
        </div>
        {% endif %}
    </span>
    {{ question_object.player }}: {{ question_object.question }}
    {% if question_object.answer %}
    <span class="material-icons" title="{{ question_object.answer.token_text}}">
        {{ question_object.answer.token_icon }}
    </span>
    {% endif %}
</div>